{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "youband-mini",
  "version": "0.1.0",
  "identifier": "chat.youband",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://127.0.0.1:5201",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "YouBand",
        "width": 1200,
        "height": 800,
        "minWidth": 700,
        "minHeight": 600,
        "center": true,
        "transparent": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
